{
    "name": "me12free/laravel-mpesa-stkpush-sandbox",
    "description": "A free Laravel package for integrating M-Pesa STK Push (sandbox/testing) with best practices.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {"name": "John Ekiru", "email": "johnewoi72@gmail.com"}
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/support": ">=9.0"
    },
    "autoload": {
        "psr-4": {
            "MpesaSandbox\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {"providers": ["MpesaSandbox\\MpesaSandboxServiceProvider"]}
    },
    "require-dev": {
        "orchestra/testbench": "^10.4",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
